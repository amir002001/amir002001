---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { ColumnList } from "../../components/ColumnList";

const allColumnPosts = await getCollection("columns");
---

<Layout title="columns">
  <section class="my-12 w-4/5 max-w-[65ch]">
    <h2 class="text-2xl font-medium">
      Columns on topics that need to be delved into, ironically in rows
    </h2>
    <ColumnList allColumnPosts={allColumnPosts} client:idle />
  </section>
</Layout>
