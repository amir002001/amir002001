---
import type { CollectionEntry } from "astro:content";
import Header from "../components/Header.astro";
export interface Props {
    title?: string;
    entry?: CollectionEntry<"projects"> | CollectionEntry<"work">;
}

const { title, entry } = Astro.props;

const concatTitle = title === undefined ? "amir ¬‿¬" : `amir ¬‿¬ - ${title}`;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta property="og:site_name" content="Amir Afshari" />
        <meta property="og:title" content={concatTitle} />
        <meta name="theme-color" content="#111729" />

        {
            entry !== undefined ? (
                <>
                    <meta property="og:image" content={entry.data.image} />
                    <meta
                        property="og:description"
                        content={entry.data.shortDescription}
                    />
                </>
            ) : (
                <>
                    <meta
                        property="og:description"
                        content="I try my best :^)"
                    />
                </>
            )
        }
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Red+Hat+Mono:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
        <meta name="msapplication-TileColor" content="#da532c" />
        <meta name="theme-color" content="#ffffff" />
        <meta name="generator" content={Astro.generator} />
        <title>{concatTitle}</title>
    </head>
    <body class="w-full min-h-screen flex flex-col">
        <Header title={title} />
        <main class="flex flex-col items-center grow">
            <slot />
        </main>
    </body>
</html>
<style is:global>
    :root {
        font-family: "Red Hat Mono", monospace;
    }
    html,
    body {
        @apply box-border bg-slate-900 text-white;
        overscroll-behavior: none;
    }
</style>
