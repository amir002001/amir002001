---
import Logo from "../components/Logo.astro";
import Link from "./Link.astro";
import { links } from "../consts/links";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<header class="flex justify-between px-6 py-6 md:px-12">
  <div
    class="max-sm:hidden flex gap-2 font-medium uppercase items-center max-md:text-xs font-['Noto_Sans']"
  >
    {
      links.map((link) => {
        return link.title === title ? (
          <div class="text-gray-500">
            <span>{title}</span>
          </div>
        ) : (
          <Link
            className=""
            href={link.href}
            title={link.title}
            target={link.target}
          />
        );
      })
    }
  </div>
  <a href="/">
    <Logo className="w-16 hover:text-rose-500" />
  </a>
</header>
