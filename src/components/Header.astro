---
import Logo from "../components/Logo.astro";
import Link from "./Link.astro";
import { links } from "../consts/links";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<header class="flex justify-between px-6 py-6 md:px-16">
    <a href="/">
        <Logo className="w-16 hover:text-rose-500" />
    </a>
    <div class="max-sm:hidden flex gap-2 md:gap-6 items-center max-md:text-xs">
        {
            links.map((link) => {
                return link.title === title ? (
                    <div class="text-gray-500">
                        <span>[X]</span>
                        <span>{title}</span>
                    </div>
                ) : (
                    <Link
                        className="hover:text-rose-500"
                        href={link.href}
                        title={link.title}
                        target={link.target}
                    />
                );
            })
        }
    </div>
</header>
