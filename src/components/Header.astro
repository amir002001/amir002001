---
import Logo from "../components/Logo.astro";
import Link from "./Link.astro";

export interface Props {
    title?: string;
}

interface Link {
    title: string;
    target?: string;
    href: string;
}

const { title } = Astro.props;

const links: Link[] = [
    {
        title: "projects",
        href: "/projects",
    },
    {
        target: "_blank",
        title: "resume",
        href: "https://docs.google.com/document/d/1k8UKC6QRw4NxkY-lMdF1ShyOLkb9w2ugVLDQf63AKNo/edit?usp=sharing",
    },
];
---

<header class="flex justify-between px-6 py-6 md:px-16">
    <a href="/">
        <Logo className="w-16" />
    </a>
    <div class="max-sm:hidden flex gap-1 md:gap-6 items-center max-md:text-xs">
        {
            links.map((link) => {
                if (link.title === title) {
                    return (
                        <div>
                            <span>[X]</span>
                            <span>{title}</span>
                        </div>
                    );
                }
                return (
                    <Link
                        href={link.href}
                        title={link.title}
                        target={link.target}
                    />
                );
            })
        }
    </div>
</header>
