---
type Props = { title: string; video_source?: string };

import Bracket from "./titledecor/Bracket.astro";

const { title, video_source, ...rest } = Astro.props;
---

<article
  class="flex flex-col items-center gap-4 border-b border-black p-6"
  {...rest}
>
  <div class="flex items-center gap-2">
    <Bracket class="h-9" />
    <h2 class="text-center font-title text-2xl font-bold">{title}</h2>
    <Bracket class="h-9 scale-x-[-1]" />
  </div>
  <video
    autoplay
    loop
    muted
    playsinline
    class="video-shadow w-full border border-black"
  >
    <source src={video_source} type="video/mp4" />
    Your browser does not support the video tag.
  </video>
  <div class="prose text-black">
    <slot />
  </div>
</article>

<style>
  .video-shadow {
    box-shadow: -2px 3px 0px 0px #000;
  }
</style>
